<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:id="@+id/rl_back"
        tools:context=".animtest.AnimTestActivity">
    <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/label_light"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_label_light"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                      android:text="光照"
                      style="@style/TextPrimary"
                      android:id="@+id/tv_light"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="光照"
                      style="@style/TextLabel"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:id="@+id/tv_label_light"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/label_temp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_label_temp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                      android:text="温度"
                      style="@style/TextPrimary"
                      android:id="@+id/tv_temp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="温度"
                      style="@style/TextLabel"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:id="@+id/tv_label_temp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/label_water"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_label_water"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                      android:text="水分"
                      style="@style/TextPrimary"
                      android:id="@+id/tv_water"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="水分"
                      style="@style/TextLabel"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:id="@+id/tv_label_water"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/label_air"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_label_air"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                      android:text="空气"
                      style="@style/TextPrimary"
                      android:id="@+id/tv_air"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="空气"
                      style="@style/TextLabel"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:id="@+id/tv_label_air"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_corners"
            android:id="@+id/tv_dialog"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:maxLines="3"
            android:textColor="@color/text_primary"
            android:text="今日雾霾，不宜开窗，不宜开窗，不宜开窗，重要的事情说三遍！"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="290dp"
    />
    <ImageView
            android:src="@drawable/blink0"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:id="@+id/iv_anim"/>
</RelativeLayout>